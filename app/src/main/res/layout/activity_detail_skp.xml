<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".skp.DetailSKP">

    <FrameLayout
        android:id="@+id/fl_editprofil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!-- Top Navbar -->
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_height="@dimen/_70pxv"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            style="@style/groupStylewhite_A700">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center_vertical"
                android:layout_marginTop="@dimen/_16pxh">

                <ImageView
                    android:id="@+id/arrow_back"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/_30pxh"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_angleleftsoli"
                    android:contentDescription="@string/arrowback" />

                <TextView
                    android:id="@+id/txtHeaderDetailSKP"
                    style="@style/txtMontserratbold20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_60pxh"
                    android:layout_marginEnd="@dimen/_30pxh"
                    android:ellipsize="end"
                    android:gravity="end|center"
                    android:singleLine="true"
                    android:text="@string/lbl_detail_skp" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_editprofil"
        android:gravity="start"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="@style/groupStylewhite_A700">

        <ScrollView
            android:scrollbars="none"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:id="@+id/sv_pengajuan_skp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent">

            <LinearLayout
                android:gravity="start"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/_30pxh">

                <!-- Bulan -->
                <LinearLayout
                    android:gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/txtMontserratbold18_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_bulan" />

                    <TextView
                        android:id="@+id/txtBulanDetailSKP"
                        style="@style/txtSolidRoundedOutline_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30pxh"
                        android:layout_marginTop="@dimen/_20pxv"
                        android:layout_marginEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_25pxh"
                        android:paddingTop="@dimen/_16pxv"
                        android:paddingEnd="@dimen/_25pxh"
                        android:paddingBottom="@dimen/_15pxv" />
                </LinearLayout>

                <!-- Tahun -->
                <LinearLayout
                    android:gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30pxv"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/txtMontserratbold18_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_tahun" />

                    <TextView
                        android:id="@+id/txtTahunDetailSKP"
                        style="@style/txtSolidRoundedOutline_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30pxh"
                        android:layout_marginTop="@dimen/_20pxv"
                        android:layout_marginEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_25pxh"
                        android:paddingTop="@dimen/_16pxv"
                        android:paddingEnd="@dimen/_25pxh"
                        android:paddingBottom="@dimen/_15pxv" />
                </LinearLayout>

                <!-- Rincian Pekerjaan -->
                <LinearLayout
                    android:gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30pxv"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/txtMontserratbold18_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/msg_rincian_pekerja" />

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_30pxh"
                        android:layout_marginStart="@dimen/_30pxh"
                        android:layout_marginTop="@dimen/_20pxv"
                        android:layout_width="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtNamaDetailSKP"
                            android:gravity="top|start"
                            style="@style/txtSolidRoundedOutline_1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100pxh"
                            android:paddingStart="@dimen/_25pxh"
                            android:paddingEnd="@dimen/_25pxh"
                            android:paddingTop="@dimen/_16pxv"
                            android:paddingBottom="@dimen/_15pxv" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30pxv"
                        android:layout_width="@dimen/_200pxh"
                        android:orientation="vertical">

                        <TextView
                            style="@style/txtMontserratbold18_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_30pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_nilai" />

                        <TextView
                            android:id="@+id/txtNilaiDetailSKP"
                            style="@style/txtSolidRoundedOutline_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_30pxh"
                            android:layout_marginTop="@dimen/_20pxv"
                            android:layout_marginEnd="@dimen/_30pxh"
                            android:paddingStart="@dimen/_25pxh"
                            android:paddingTop="@dimen/_16pxv"
                            android:paddingEnd="@dimen/_25pxh"
                            android:paddingBottom="@dimen/_15pxv" />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30pxv"
                        android:layout_width="@dimen/_200pxh"
                        android:orientation="vertical">

                        <TextView
                            style="@style/txtMontserratbold18_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_jumlah_kegiatan" />

                        <TextView
                            android:id="@+id/txtJumlahKegiatanDetailSKP"
                            style="@style/txtSolidRoundedOutline_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20pxv"
                            android:paddingStart="@dimen/_25pxh"
                            android:paddingTop="@dimen/_16pxv"
                            android:paddingEnd="@dimen/_25pxh"
                            android:paddingBottom="@dimen/_15pxv" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Validasi -->
                <LinearLayout
                    android:gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30pxv"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/txtMontserratbold18_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_status_validasi" />

                    <TextView
                        android:id="@+id/txtStatusValidasiDetailSKP"
                        style="@style/txtSolidRoundedOutline_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30pxh"
                        android:layout_marginTop="@dimen/_20pxv"
                        android:layout_marginEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_25pxh"
                        android:paddingTop="@dimen/_16pxv"
                        android:paddingEnd="@dimen/_25pxh"
                        android:paddingBottom="@dimen/_15pxv" />
                </LinearLayout>

                <!-- Line -->
                <View
                    android:background="@color/gray_400"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/_3pxv"
                    android:layout_marginEnd="@dimen/_30pxh"
                    android:layout_marginStart="@dimen/_30pxh"
                    android:layout_marginTop="@dimen/_40pxv"
                    android:layout_width="match_parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_30pxv"
                    android:layout_marginBottom="@dimen/_10pxv"
                    android:gravity="center">

                    <!-- Button Submit -->
                    <LinearLayout
                        android:id="@+id/btn_edit_detailskp"
                        android:layout_marginEnd="@dimen/_10pxh"
                        style="@style/groupStyleteal_400cornerRadius"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_50pxh"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/pentosquare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20pxh"
                            android:contentDescription="@string/icon_save"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_pentosquares" />

                        <TextView
                            style="@style/txtMontserratbold18_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15pxh"
                            android:layout_marginEnd="@dimen/_20pxh"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_edit" />

                    </LinearLayout>

                    <!-- Button Edit -->
                    <LinearLayout
                        android:id="@+id/btn_nilai_detailskp"
                        style="@style/groupStylegreen_400cornerRadius"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_height="@dimen/_50pxh"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageFloppydisksol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20pxh"
                            android:contentDescription="@string/icon_save"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_plussolid" />

                        <TextView
                            style="@style/txtMontserratbold18_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15pxh"
                            android:layout_marginEnd="@dimen/_20pxh"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_nilai" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
