<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".EditProfilFragment">

    <FrameLayout
        android:id="@+id/fl_editprofil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!-- Top Navbar -->
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_height="@dimen/_70pxv"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            style="@style/groupStylewhite_A700">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center_vertical"
                android:layout_marginTop="@dimen/_16pxh">

                <ImageView
                    android:id="@+id/arrow_back"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/_30pxh"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_angleleftsoli"
                    android:contentDescription="@string/arrowback" />

                <TextView
                    android:id="@+id/txtChangePassword"
                    style="@style/txtMontserratbold20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_60pxh"
                    android:layout_marginEnd="@dimen/_30pxh"
                    android:ellipsize="end"
                    android:gravity="end|center"
                    android:singleLine="true"
                    android:text="@string/lbl_log_kegiatan" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_editprofil"
        android:gravity="start"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="@style/groupStylewhite_A700">

        <ScrollView
            android:clipToPadding="false"
            android:fillViewport="true"
            android:id="@+id/sv_editprofil"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent">

            <LinearLayout
                android:gravity="start"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <!-- Kode Kegiatan -->
                <LinearLayout
                    android:gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical">
                    <TextView
                        style="@style/txtMontserratbold20_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_kode_kegiatan" />
                    <TextView
                        android:id="@+id/txtKodeKeg"
                        style="@style/txtSolidRoundedOutline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30pxh"
                        android:layout_marginTop="@dimen/_20pxv"
                        android:layout_marginEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_25pxh"
                        android:paddingTop="@dimen/_16pxv"
                        android:paddingEnd="@dimen/_25pxh"
                        android:paddingBottom="@dimen/_15pxv"
                        android:text="@string/lbl_mpnp0903220001"/>
                </LinearLayout>

                <!-- SKP -->
                <LinearLayout
                    android:gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30pxv"
                    android:layout_width="match_parent"
                    android:orientation="vertical">
                    <TextView
                        style="@style/txtMontserratbold20_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_skp" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:background="@drawable/rectangle_bg_white_a700_border_black_900_radius_25"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30pxh"
                        android:layout_marginTop="@dimen/_20pxv"
                        android:layout_marginEnd="@dimen/_30pxh"
                        android:paddingTop="@dimen/_16pxv"
                        android:paddingBottom="@dimen/_15pxv">
                        <AutoCompleteTextView
                            android:labelFor="@id/txtSKP"
                            style="@style/txtMontserratbold20_1"
                            android:layout_marginStart="@dimen/_20pxh"
                            android:layout_marginEnd="@dimen/_20pxh"
                            android:inputType="none"
                            android:id="@+id/txtSKP"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Unit Kerja -->
                <LinearLayout
                    android:gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30pxv"
                    android:layout_width="match_parent"
                    android:orientation="vertical">
                    <TextView
                        style="@style/txtMontserratbold20_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_unit_kerja" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:background="@drawable/rectangle_bg_white_a700_border_black_900_radius_25"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30pxh"
                        android:layout_marginTop="@dimen/_20pxv"
                        android:layout_marginEnd="@dimen/_30pxh"
                        android:paddingTop="@dimen/_16pxv"
                        android:paddingBottom="@dimen/_15pxv"
                        android:hint="@string/selected_item">
                        <AutoCompleteTextView
                            android:labelFor="@id/txtUnitKerja"
                            style="@style/txtMontserratbold20_1"
                            android:layout_marginStart="@dimen/_20pxh"
                            android:layout_marginEnd="@dimen/_20pxh"
                            android:inputType="none"
                            android:id="@+id/txtUnitKerja"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@string/membuat_aplikasi_mobile"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Uraian Pekerjaan -->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30pxv"
                    android:layout_width="match_parent"
                    android:orientation="vertical">
                    <TextView
                        style="@style/txtMontserratbold20_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/msg_uraian_pekerjaa" />

                        <TextView
                            android:padding="@dimen/_20pxh"
                            style="@style/txtMontserratbold20_1"
                            android:background="@drawable/rectangle_bg_white_a700_border_black_900_radius_25"
                            android:id="@+id/viewRectangle14"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="@dimen/_120pxv"
                            android:layout_marginEnd="@dimen/_30pxh"
                            android:layout_marginStart="@dimen/_30pxh"
                            android:layout_marginTop="@dimen/_20pxv"
                            android:layout_width="match_parent"/>
                </LinearLayout>

                <!-- File -->
                <LinearLayout
                    android:gravity="start"
                    android:id="@+id/linearGroup261"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30pxv"
                    android:layout_width="match_parent"
                    android:orientation="vertical">
                    <TextView
                        style="@style/txtMontserratbold20_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_file" />
                    <TextView
                        android:id="@+id/txtKeahlian"
                        style="@style/txtSolidRoundedOutline_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30pxh"
                        android:layout_marginTop="@dimen/_20pxv"
                        android:layout_marginEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_25pxh"
                        android:paddingTop="@dimen/_16pxv"
                        android:paddingEnd="@dimen/_25pxh"
                        android:paddingBottom="@dimen/_15pxv"
                        android:text="@string/lbl_cv_mapen_pdf"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/_30pxh"
                        android:layout_marginTop="@dimen/_20pxh">
                        <!-- Upload -->
                        <TextView
                            android:id="@+id/txtUploadKeahlian"
                            android:layout_marginBottom="@dimen/_20pxh"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingStart="@dimen/_20pxh"
                            android:paddingEnd="@dimen/_20pxh"
                            android:padding="@dimen/_10pxh"
                            android:layout_gravity="start"
                            android:text="@string/lbl_unggah_dokumen"
                            android:drawablePadding="@dimen/_20pxh"
                            style="@style/groupStyleteal_400cornerRadius"
                            app:drawableStartCompat="@drawable/img_uploadsolid_1" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Button Submit -->
                <LinearLayout
                    android:gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_60pxv"
                    android:layout_marginBottom="@dimen/_30pxv"
                    android:layout_marginStart="@dimen/_30pxh"
                    android:layout_marginEnd="@dimen/_30pxh"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/groupStyleorange_500cornerRadius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10pxh"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageFloppydisksol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20pxh"
                            android:contentDescription="@string/icon_save"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_floppydisksol" />

                        <TextView
                            android:id="@+id/txtSimpan"
                            style="@style/txtMontserratbold20_1"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_25pxh"
                            android:layout_marginEnd="@dimen/_20pxh"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_simpan"
                            android:layout_width="0dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>
